<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="freeboard">
 	 
    <resultMap id="Article"  type="com.sbaitproject.roadwith.freeboard.vo.Article" >
        <result property="articleId" column="article_id"/>
        <result property="groupId" column="group_id"/>
        <result property="sequenceNo"  column="sequence_no"/>
        <result property="postingDate"  column="posting_date"/>
        <result property="readCount"  column="read_count"/>
        <result property="writerName"  column="writer_name"/>
        <result property="password"  column="password"/>
        <result property="title"  column="title"/>
        <result property="content"  column="content"/>
    </resultMap>
    
    <select id="SelectAll"  resultType="int">
    	SELECT count(*)
    	FROM article
    </select>
	
	<select id="articleSelected"  parameterType="String"  resultType="hashmap">
		SELECT article_id , group_id , sequence_no , posting_date, read_count, writer_name , password , title
		FROM article
		ORDER BY sequence_no desc limit #{firstRow}, #{endRow} 
	</select>
	
	<select id="selectLastArticleNo" resultType="int">
		SELECT seq_freeboard.currval
		FROM dual
	</select>
	
	<insert id="insertArticle" parameterType="com.sbaitproject.roadwith.freeboard.vo.Article">
		insert into freeBoard
		(article_id, group_id, sequence_no, posting_date, read_count, writer_name, password, title, content)
		values (#{article_id}, #{group_id}, #{sequence_no}, #{posting_date}, #{read_count}, #{writer_name}, #{password}, #{title}, #{content})
	</insert>
 	 </mapper>